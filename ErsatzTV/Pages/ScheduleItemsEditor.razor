                            }
                        </MudSelect>
                        <MudSelect Class="mt-3"
                                   T="FillerPresetViewModel"
                                   Label="Fallback Filler"
                                   @bind-value="_selectedItem.FallbackFiller"
                                   Clearable="true">
                            @foreach (FillerPresetViewModel filler in _fillerPresets.Where(f => f.FillerKind == FillerKind.Fallback))
                            {
