    }

    private string GetMoviesLink()
    {
        var uri = "/media/movies/page/1";
        if (!string.IsNullOrWhiteSpace(_query))
        {
            (string key, string value) = _query.EncodeQuery();
            uri = $"{uri}?{key}={value}";
        }
        return uri;
