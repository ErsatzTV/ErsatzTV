                    <MudMenuItem Icon="@Icons.Material.Filled.Check" Label="Clear Selection" OnClick="ClearSelection"/>
                </MudMenu>
            </div>
        }
        else if (IsNotEmpty)
        {
            <div style="align-items: center; display: flex; width: 100%" class="d-none d-md-flex">
                @if (_movies?.Cards.Count > 0)
